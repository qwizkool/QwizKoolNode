script (type='text/javascript', src='http://www.google.com/recaptcha/api/js/recaptcha_ajax.js')
#qwizbook-comments-form.qwizbook-comment-style.clearfix
    .row
        .span12
          script(type='text/javascript')
            var RecaptchaOptions = {
            theme : 'custom',
            custom_theme_widget: 'recaptcha_widget',
            lang  : 'en'
            };
            
          form.form-horizontal
            fieldset(style='padding: 10px;')
              legend.text-info Provide your comments
              .control-group
                textarea#qwizbook-comment-text.input-block-level(rows='4', cols="50", placeholder='Provide your comments for this qwizbook.', style='resize: vertical;')
              #recaptcha_widget(style='display: none;')
                #recaptcha_image
                .recaptcha_only_if_incorrect_sol(style='color: red;') Incorrect please try again
                span.recaptcha_only_if_image Enter the words above:
                span.recaptcha_only_if_audio Enter the numbers you hear:
                input#recaptcha_response_field(type='text', name='recaptcha_response_field')
                div
                  a(href='javascript:Recaptcha.reload()') Get another CAPTCHA
                .recaptcha_only_if_image
                  a(href='javascript:Recaptcha.switch_type(\'audio\')') Get an audio CAPTCHA
                .recaptcha_only_if_audio
                  a(href='javascript:Recaptcha.switch_type(\'image\')') Get an image CAPTCHA
                div
                  a(href='javascript:Recaptcha.showhelp()') Help
               script(type='text/javascript', src='http://www.google.com/recaptcha/api/challenge?k=6Ld3buASAAAAADKscITxGr_e-yGBBbKvBqeR1X43')
               
               noscript
              
                iframe(src='http://www.google.com/recaptcha/api/noscript?k=6Ld3buASAAAAADKscITxGr_e-yGBBbKvBqeR1X43', height='300', width='500', frameborder='0')
                br
                
                textarea(name='recaptcha_challenge_field', rows='3', cols='40')
                input(type='hidden', name='recaptcha_response_field', value='manual_challenge')
              button#addcomment.btn.btn-info Submit
